{
  "name": "eta-prettifier-monorepo",
  "version": "1.1.0",
  "private": true,
  "description": "Monorepo for ETA/EJS Prettier plugin and VS Code formatter extension.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KEYHAN-A/eta-prettifier.git"
  },
  "bugs": {
    "url": "https://github.com/KEYHAN-A/eta-prettifier/issues"
  },
  "homepage": "https://github.com/KEYHAN-A/eta-prettifier#readme",
  "workspaces": [
    "packages/*",
    "website"
  ],
  "scripts": {
    "build": "npm run -ws build",
    "test": "npm run -ws test",
    "lint": "npm run -ws lint",
    "typecheck": "npm run -ws typecheck",
    "licenses:report": "license-checker --summary --production --excludePrivatePackages",
    "licenses:check": "node scripts/check-licenses.mjs",
    "package:extension": "npm run --workspace @eta-ejs/prettier-plugin build && npm run --workspace eta-ejs-prettifier package",
    "site:build": "npm run --workspace eta-ejs-prettifier-site build",
    "site:test": "npm run --workspace eta-ejs-prettifier-site test"
  },
  "devDependencies": {
    "@types/node": "^24.4.0",
    "license-checker": "^25.0.1",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
